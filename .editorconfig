# http://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120
quote_type = single

[*.{stories.ts,tsx,stories.mdx}]
trim_trailing_whitespace = false

[*.md]
insert_final_newline = false
trim_trailing_whitespace = false

[*.yml]
indent_size = 2
