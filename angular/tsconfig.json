{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "wcs-angular": [
        "dist/wcs-angular/wcs-angular",
        "dist/wcs-angular"
      ],
      "wcs-formly": [
        "dist/wcs-formly/wcs-formly",
        "dist/wcs-formly"
      ]
    }
  }
}