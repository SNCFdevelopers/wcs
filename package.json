{
    "name": "wcs-core",
    "version": "2.12.1",
    "description": "Web components SNCF",
    "main": "dist/index.cjs.js",
    "module": "dist/index.js",
    "es2015": "dist/esm/index.mjs",
    "es2017": "dist/esm/index.mjs",
    "types": "dist/types/interfaces.d.ts",
    "collection": "dist/collection/collection-manifest.json",
    "collection:main": "dist/collection/index.js",
    "unpkg": "dist/wcs/wcs.js",
    "files": [
        "dist/",
        "loader/"
    ],
    "scripts": {
        "build:stencil": "stencil build",
        "generate-custom-element-manifest": "cd src && custom-elements-manifest analyze --stencil --outdir ../",
        "build": "stencil build && npm run generate-custom-element-manifest && npm run build-storybook",
        "watch:stencil": "stencil build --dev --watch",
        "start": "concurrently --names \"Stencil,Storybook\" -c \"bgBlue.bold,bgMagenta.bold\" \"stencil build --dev --watch\" \"npm run storybook\"",
        "test": "stencil test --spec --e2e",
        "test:watch": "stencil test --spec --e2e --watchAll",
        "update-version": "node scripts/update-version.js",
        "update-develop": "node scripts/update-develop-from-master.js",
        "storybook": "start-storybook -s ./dist/wcs,./src/assets/fonts -p 6006",
        "build-storybook": "build-storybook -s ./dist/wcs,./src/assets/fonts"
    },
    "devDependencies": {
        "@babel/core": "^7.16.0",
        "@custom-elements-manifest/analyzer": "^0.5.7",
        "@ionic/eslint-config": "^0.3.0",
        "@material/ripple": "13.0.0",
        "@stencil/angular-output-target": "^0.4.0",
        "@stencil/core": "2.13.0",
        "@stencil/sass": "1.5.2",
        "@storybook/addon-actions": "^6.4.20",
        "@storybook/addon-docs": "^6.4.20",
        "@storybook/addon-essentials": "^6.4.20",
        "@storybook/addon-links": "^6.4.20",
        "@storybook/web-components": "^6.4.20",
        "@types/dom-inputevent": "^1.0.5",
        "@types/glob": "^7.1.3",
        "@types/jest": "26.0.7",
        "@types/puppeteer": "^3.0.1",
        "@typescript-eslint/eslint-plugin": "^5.18.0",
        "@typescript-eslint/parser": "^5.18.0",
        "babel-loader": "^8.2.3",
        "chokidar": "^3.4.1",
        "concurrently": "^5.2.0",
        "eslint": "^8.12.0",
        "glob": "^7.1.6",
        "highlight.js": "^10.1.2",
        "jest": "^26.1.0",
        "jest-cli": "^26.1.0",
        "lit-html": "^2.0.1",
        "markdown-it": "^11.0.0",
        "mem": "^6.1.0",
        "puppeteer": "^5.2.1",
        "rollup": "^2.23.0",
        "rollup-plugin-typescript": "^1.0.1",
        "tslib": "^2.0.0",
        "typescript": "~3.9.7",
        "webpack-watch-files-plugin": "^1.2.0"
    },
    "dependencies": {
        "@popperjs/core": "^2.9.3",
        "chalk": "^4.1.0",
        "lodash": "^4.17.21",
        "tippy.js": "^6.3.7",
        "uuid": "^8.3.2",
        "xstate": "^4.11.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://gitlab.com/SNCF/wcs"
    },
    "author": "SNCF",
    "private": false,
    "license": "MIT",
    "customElements": "custom-elements.json"
}
