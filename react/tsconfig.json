{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationDir": "dist/types",
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "jsx": "react",
        "lib": [
            "dom",
            "es2015"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noLib": false,
        "outDir": "dist-transpiled",
        "removeComments": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "target": "es2017"
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "lib"
    ]
}
